{
  "manifest_version": 3,
  "name": "Context Menu Highlighter",
  "version": "1.0",
  "description": "Highlight selected text via context menu",
  "permissions": ["contextMenus", "scripting", "storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
